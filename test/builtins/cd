#!/usr/bin/env bash

source ../.defaults

OUTFILE=minishell.out
ERRFILE=err.txt

$BINARY > $OUTFILE 2> $ERRFILE <<EOF
    pwd
    cd ../
    pwd
    cd
    pwd
EOF

MSH_RET=$?

(
    pwd
    cd ../
    pwd
    cd
    pwd
) > cd.diff

diff -u cd.diff $OUTFILE

RET=$?

echo "Error output:"
cat $ERRFILE

# Cleanup testing files
rm $OUTFILE $ERRFILE

# Check shell return code
if [ $MSH_RET != 0 ]
then
    exit 1
fi

# Else check diff return code
exit $RET

# Local Variables:
# mode: shell-script
# prelude-clean-whitespace-on-save: nil
# End:
